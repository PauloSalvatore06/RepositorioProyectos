#include <16F886.h>
#device ADC=10
#use delay(clock=4000000)
#include <lcd1.c>
#fuses intrc_io,nowdt,noput,nomclr,noprotect,nocpd,nobrownout
#fuses noieso,nofcmen,nodebug,nowrt,borv21
#use fast_io(A)
#use fast_io(B)
#use fast_io(C)

void main()
{  
   int dip=Input_C();
   dip=dip&0xC0;                                                                 //1100 0000=C0;
   dip>>=6;
   setup_adc(adc_clock_internal);
   setup_adc_ports(sAN0);
   set_adc_channel(0);
   lcd_init();                                                              //k= (Vin)/(2^n-1)
   Lcd_gotoxy(1,1);
   while(1)
   {
      int Digital=Read_Adc();
      float Analogico=Digital*((5.000/255.000));
      printf(lcd_putc,"\f \n \f");
      printf (lcd_putc, "Digital:%u \nAnalogico:%.3g",Digital,Analogico);
      delay_ms(300);
   }
}
